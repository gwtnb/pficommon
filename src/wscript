
subdirs = [
  'lang',
  'concurrent',
  'system',
  'data',
  'math',
  'text',
  ]

def options(opt):
  pass

def configure(conf):
  conf.check_cxx(lib = 'pthread')

  conf.recurse(subdirs)

def build(bld):
  b = bld.shlib(
    source = 'empty.cpp',
    target = 'pficommon',
    vnum = bld.env['VERSION'],
    use = [
      'pficommon_concurrent',
      'pficommon_data',
      'pficommon_lang',
      'pficommon_math',
      'pficommon_system',
      'pficommon_text',
      ])

  bld.recurse(subdirs)
